---
import Sidebar from "../components/React/Sidebar.jsx";
const { title = "Finance App" } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="min-h-screen">
    <Sidebar client:load />

    <main class="container py-8">
      <slot />
    </main>

    <footer class="border-t theme-transition"> <!-- removed bg-white -->
      <div class="container py-4 text-sm muted">
        <span>Proyecto: Aplicación financiera personal — Proyecto 1</span>
      </div>
    </footer>
  </body>
</html>